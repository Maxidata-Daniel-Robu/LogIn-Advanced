<Page x:Class="test.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="WelcomePage"
      Background="#FF1E1E1E">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border Background="#FF2D2D30"
                CornerRadius="10"
                Padding="40"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Gray"
                BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Welcome"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" />

                <!-- Continue to Login -->
                <Button Content="Continue to Login"
                        Width="200"
                        Height="40"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,10"
                        Command="{Binding NavigateToLoginCommand}"/>

                <!-- Go to Register -->
                <Button Content="Go to Register"
                        Width="200"
                        Height="40"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding NavigateToRegisterCommand}"/>

                <!-- Manage Users (now aligned) -->
                <Button Content="Manage Users"
                        Width="200"
                        Height="40"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Command="{Binding ManageUsersCommand}"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
