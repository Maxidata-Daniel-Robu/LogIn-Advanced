<Page x:Class="test.LogInPage.Register_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:helpers="clr-namespace:test.Helpers"
      Title="RegisterPage"
      Background="#FF1E1E1E">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300"
                    Margin="20">

            <!-- Back + Title on one line -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Back to Welcome -->
                <Button Content="← Back"
                        Grid.Column="0"
                        Width="80"
                        Height="36"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontSize="14"
                        Command="{Binding NavigateBackCommand}"
                        Cursor="Hand"/>

                <!-- Title -->
                <TextBlock Text="Register"
                           Grid.Column="1"
                           FontSize="28"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Grid>

            <!-- Username -->
            <TextBlock Text="Username"
                       Foreground="LightGray"
                       Margin="5,0,0,2"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Height="36"
                     FontSize="16"
                     Background="#FF2E2E2E"
                     Foreground="White"
                     Padding="5,6"
                     Margin="0,0,0,10"/>

            <!-- Password -->
            <TextBlock Text="Password"
                       Foreground="LightGray"
                       Margin="5,0,0,2"/>
            <PasswordBox helpers:PasswordBoxHelper.AttachBehavior="True"
                         helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="300"
                         Height="36"
                         FontSize="16"
                         Background="#FF2E2E2E"
                         Foreground="White"
                         Padding="5,6"
                         Margin="0,0,0,10"/>

            <!-- Confirm Password -->
            <TextBlock Text="Confirm Password"
                       Foreground="LightGray"
                       Margin="5,0,0,2"/>
            <PasswordBox helpers:PasswordBoxHelper.AttachBehavior="True"
                         helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="300"
                         Height="36"
                         FontSize="16"
                         Background="#FF2E2E2E"
                         Foreground="White"
                         Padding="5,6"
                         Margin="0,0,0,20"/>

            <!-- Register Button -->
            <Button Content="Register"
                    Width="200"
                    Height="40"
                    Background="#FF007ACC"
                    Foreground="White"
                    FontSize="16"
                    Command="{Binding RegisterCommand}"
                    Cursor="Hand"/>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{Binding StatusColor}"
                       FontWeight="Bold"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

            <!-- Login Link (now immediately below Register button) -->
            <TextBlock HorizontalAlignment="Center"
                       Foreground="White"
                       Margin="0,20,0,0">
                <Hyperlink Command="{Binding NavigateToLoginCommand}"
                           Foreground="LightSteelBlue"
                           Cursor="Hand">
                    Already have an account? <Run Text="Log in here"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
