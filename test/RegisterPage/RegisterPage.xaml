<Page x:Class="test.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:test.ViewModels"
      Title="RegisterPage">

    <Page.DataContext>
        <vm:RegisterViewModel/>
    </Page.DataContext>

    <Grid Background="#FF1E1E1E">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="20">
            <TextBlock Text="Register"
                       FontSize="28"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Username -->
            <TextBlock Text="Username" Foreground="LightGray" Margin="5,0,0,2"/>
            <TextBox Height="36"
                     Margin="0,0,0,10"
                     FontSize="16"
                     Background="#FF2E2E2E"
                     Foreground="White"
                     Padding="5,6"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Password -->
            <TextBlock Text="Password" Foreground="LightGray" Margin="5,0,0,2"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="36"
                         Margin="0,0,0,10"
                         FontSize="16"
                         Background="#FF2E2E2E"
                         Foreground="White"
                         Padding="5,6"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <!-- Confirm Password -->
            <TextBlock Text="Confirm Password" Foreground="LightGray" Margin="5,0,0,2"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Height="36"
                         Margin="0,0,0,10"
                         FontSize="16"
                         Background="#FF2E2E2E"
                         Foreground="White"
                         Padding="5,6"
                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

            <!-- Register Button -->
            <Button Content="Register"
                    Width="200"
                    Height="40"
                    Background="#FF28A745"
                    Foreground="White"
                    FontSize="16"
                    Margin="0,10,0,10"
                    Command="{Binding RegisterCommand}" />

            <!-- Status/Error Message -->
            <TextBlock Text="{Binding StatusMessage}" 
           Foreground="{Binding StatusColor}" 
           FontWeight="Bold" 
           Margin="0,10,0,0"
           TextWrapping="Wrap"
           HorizontalAlignment="Center"/>

            <!-- Back to Login -->
            <TextBlock HorizontalAlignment="Center" Foreground="White" Margin="0,20,0,0">
                <Hyperlink Command="{Binding NavigateToLoginCommand}">
                    Already have an account? Login
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
